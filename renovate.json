{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard"
  ],
  "packageRules": [
    {
      "automerge": true,
      "automergeStrategy": "squash",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
         "digest",
         "major",
         "minor",
         "patch"
      ],
      "platformAutomerge": true
    }
  ],
  "postUpdateOptions": [
    "helmUpdateSubChartArchives"
  ]
}